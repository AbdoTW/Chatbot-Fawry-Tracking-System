{
  "name": "chat-app-backend",
  "version": "1.0.0",
  "description": "Express proxy server for Gemini API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "json-server": "json-server --watch db.json --port 3000",
    "dev:all": "concurrently \"npm run json-server\" \"npm run dev\" \"cd client && npm run dev\""
  },
  "keywords": ["chat", "gemini", "express", "api"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1"
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "json-server": "^0.17.4",
    "nodemon": "^3.1.7"
  }
}